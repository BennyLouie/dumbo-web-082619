<!DOCTYPE html>
<html>
  <head>
    <title>Pizzeria App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="menu">
      <div class="container">
        <span class="logo item">
          Enumerati Pizza
        </span>
        <nav>
          <% if logged_in? %>
            <%= link_to "Pizzas", pizzas_path, class: "item" %>
            <%= link_to "Toppings", toppings_path, class: "item" %>
          <% end %>
        </nav>
        <nav class="right">
          <span class="item">
            <% if logged_in? %>
              Welcome, <%= @current_user.username %>
              <%= button_to "Logout", "/logout", method: :delete %>
            <% else %>
              <%= link_to "Sign Up", new_user_path, class: "item" %>
              <%= link_to "Login", login_path, class: "item" %>
            <% end %>
          </span>
        </nav>
      </div>
    </header>
    <div class="main">
      <div class="container">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
